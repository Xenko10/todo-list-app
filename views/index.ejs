<%- include("partials/header.ejs") %>
  <% const dayNames=["Sunday","Monday", "Tuesday" ,"Wednesday", "Thursday" , "Friday" , "Saturday" ]; %>
    <% const monthNames=["January","February","March","April","May","June","July", "August"
      ,"September","October","November","December"];%>
      <% const date=new Date(); %>
        <div id="heading" class="box">
          <h1>

            <%= dayNames[date.getDay()];%>, <%= monthNames[date.getMonth()];%>
                <%= date.getDate() %>
          </h1>
        </div>
        <div id="todo-wrapper">
          <ul>
            <% if (locals.text){ %>
              <% for (let i=0; i<text.length; i++){%>
                <form action="/delete" method="POST">
                  <li class="todo-item">
                    <input type="checkbox" name="checkbox" class="toggleButton" value="<%= text[i].id %>"
                      onChange="this.form.submit()"></input>
                    <p class="targetElement">
                      <%=text[i].task%>
                    </p>
                  </li>
                </form>

                <% }} %>
                  <li>
                    <form action="/submit" method="POST">
                      <input type="text" name="input" id="text-form" placeholder="New Item">
                      <input type="submit" value="+" id="submit-form">
                    </form>
                  </li>
          </ul>


        </div>
        <script>
          if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
          }
        </script>
        <%- include("partials/footer.ejs") %>